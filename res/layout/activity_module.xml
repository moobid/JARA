<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TableLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="@dimen/size16"
    tools:context=".ModuleActivity" >

    <TableRow
        android:id="@+id/TableRow01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/size8"
            android:text="Current Session"
            android:textSize="24sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/size4"
            android:text="@string/participant" />

        <TextView
            android:id="@+id/participant_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/participant" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/size4"
            android:text="@string/researcher" />

        <TextView
            android:id="@+id/researcher_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/researcher" />

    </TableRow>
    
    <TableRow
        android:id="@+id/TableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/TextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/size4"
            android:text="Session started on" />

        <TextView
            android:id="@+id/date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/size8"
            android:text="Select Module"
            android:textSize="24sp" />

    </TableRow>
    
    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

		<ListView
		    android:id="@+id/android:list"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_gravity="fill_horizontal"
		    />
		
		<!-- gets used when list empty -->

		<TextView
		    android:id="@+id/android:empty"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="no Modules added yet" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onclick_add_module"
            android:text="Add new Module" />

    </TableRow>
    
    <TableRow
        android:id="@+id/tableRow8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size64"
            android:onClick="onclick_reset_modulecounter"
            android:text="Delete all Modules" />

    </TableRow>
</TableLayout>