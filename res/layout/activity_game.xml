<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <VideoView
        android:id="@+id/videoViewReward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imageViewReward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.41"
        android:scaleType="center"
        android:src="@android:drawable/btn_star"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/topleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onclick_touched"
            android:src="@drawable/ic_launcher" />

        <ImageButton
            android:id="@+id/topmid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onclick_touched"
            android:src="@drawable/ic_launcher" />

        <ImageButton
            android:id="@+id/topright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onclick_touched"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/midleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onclick_touched"
            android:src="@drawable/ic_launcher" />

        <ImageButton
            android:id="@+id/midmid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onclick_touched"
            android:src="@drawable/ic_launcher" />

        <ImageButton
            android:id="@+id/midright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onclick_touched"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/bottomleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onclick_touched"
            android:src="@drawable/ic_launcher" />

        <ImageButton
            android:id="@+id/bottommid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onclick_touched"
            android:src="@drawable/ic_launcher" />

        <ImageButton
            android:id="@+id/bottomright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onclick_touched"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

    <Chronometer
        android:id="@+id/chronometer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chronometer"
        android:visibility="gone" />

</LinearLayout>